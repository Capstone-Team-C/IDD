@model Appserver.Models.ImageUploadModel;

@{
    ViewData["Title"] = "Upload Your Timesheet";
}
<h1>@ViewData["Title"]</h1>

<form method="post" enctype="multipart/form-data" asp-controller="ImageUpload" asp-action="PostImage">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one or more files using this form:</p>
            <input type="file" name="files" multiple />
            <select asp-for="formType" asp-items="Html.GetEnumSelectList<AbstractFormObject.FormType>()"></select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>