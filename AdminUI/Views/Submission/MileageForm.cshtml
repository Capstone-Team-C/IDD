@model Common.Models.MileageForm
@{
    ViewData["Title"] = "Mileage Form";
}

<div class="container">
    <div class="flex-container column">

        @{await Html.RenderPartialAsync("_Header", Model);}

            <table class="table table-striped table-bordered table-hover">
                <caption>Service Log</caption>
                <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Miles</th>
                    <th scope="col">Group?</th>
                    <th scope="col">Purpose of Trip/Service Goal</th>
                    <th scope="col">Status</th>
                    <th scope="col" style="width:200px">Line Action</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var t in Model.MileageEntries)
                {
                    <tr>
                        <td>@t.Date.ToString("d")</td>
                        <td>@t.Miles</td>
                        <td>@(t.Group ? "Yes" : "No")</td>
                        <td>@t.PurposeOfTrip</td>
                        <td>@t.Status</td>
                        <td>
                            <form asp-controller="Submission" asp-action="ProcessLine">
                                <input type="hidden" name="submissionId" value="@Model.Id" />
                                <input type="hidden" name="entryId" value="@t.Id" />
                                <input class="btn btn-primary" name="status" value="Approve" type="submit">
                                <input class="btn btn-danger" name="status" value="Reject" type="submit">
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
                <tfoot>
                <tr class="table-success font-weight-bold">
                    <th colspan="1" style="text-align: right;">Total:</th>
                    <td colspan="5">@Model.TotalMiles Miles</td>
                </tr>
                </tfoot>
            </table>

        @{await Html.RenderPartialAsync("_Footer", Model);}

    </div>
</div>
