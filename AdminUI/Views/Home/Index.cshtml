                })</th>
        }
        @if (Model.SortOrder == "prime")
        {
            <th>@Html.ActionLink("Client Prime", "Index", new
                {
                    sortOrder = "prime_desc",
                    id = Model.Id,
                    pname = Model.PName,
                    prime = Model.Prime,
                    cname = Model.CName,
                    datefrom = Model.DateFrom,
                    dateto = Model.DateTo
                })</th>
        }
        else
        {
            <th>@Html.ActionLink("Client Prime", "Index", new
                {
                    sortOrder = "prime",
